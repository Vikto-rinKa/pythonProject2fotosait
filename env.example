# Django Backend Settings
# Скопируйте этот файл в .env и заполните реальными значениями

# Django Secret Key (обязательно для продакшена!)
# Сгенерируйте новый ключ: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Django Debug Mode (True для разработки, False для продакшена)
DJANGO_DEBUG=True

# Allowed Hosts (через запятую, без пробелов)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# React Frontend API URL (для разработки используйте localhost:8000/api)
REACT_APP_API_URL=http://localhost:8000/api
